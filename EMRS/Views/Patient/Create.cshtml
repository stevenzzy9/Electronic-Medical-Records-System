        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EMCPhone)
            @Html.ValidationMessageFor(model => model.EMCPhone)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
