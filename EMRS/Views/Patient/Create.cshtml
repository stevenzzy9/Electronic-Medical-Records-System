        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EMCName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EMCName)
            @Html.ValidationMessageFor(model => model.EMCName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EMCAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EMCAddress)
            @Html.ValidationMessageFor(model => model.EMCAddress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EMCEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EMCEmail)
