@model EMRS.Models.AttachTreatmentRecordModel

@{
    ViewBag.Title = "Assign Doctor";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@Html.DisplayNameFor(model => model.PatientName) : @Html.DisplayFor(model => model.PatientName)</h1>
                
                <h2>@Html.DisplayFor(model => model.CreatedTime)</h2>
            </hgroup>
            <p>
                @Html.DisplayFor(model => model.Comment)
            </p>
        </div>
    </section>
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TreatmentRecord</legend>

        @Html.HiddenFor(model => model.MedicalRecordID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsFinished)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsFinished)
            @Html.ValidationMessageFor(model => model.IsFinished)
        </div>

        <p>
            <input type="submit" value="Attach" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Details", "Details", new { id = Model.MedicalRecordID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
